# .github/workflows/v4_pipeline.yml
name: V4 Pipeline

on:
  workflow_dispatch:
  schedule:
    - cron: "30 7 * * *"   # 07:30 UTC
    - cron: "30 16 * * *"  # 16:30 UTC

concurrency:
  group: v4_pipeline
  cancel-in-progress: false

jobs:
  pipeline:
    runs-on: ubuntu-24.04
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install deps
        shell: bash
        run: |
          python -m pip install --upgrade pip
          if [ -f requirements.txt ]; then
            pip install -r requirements.txt
          else
            pip install gspread google-auth requests openai
          fi

      - name: Run unified pipeline (feeder + score + render + publish)
        shell: bash
        env:
          # === Google Sheets ===
          GCP_SA_JSON: ${{ secrets.GCP_SA_JSON }}
          SPREADSHEET_ID: ${{ secrets.SPREADSHEET_ID }}
          RAW_DEALS_TAB: ${{ secrets.RAW_DEALS_TAB }}

          # === Duffel (MUST be present for seeding when sheet is empty) ===
          DUFFEL_API_KEY: ${{ secrets.DUFFEL_API_KEY }}

          # Quick-start fallback route if CONFIG tab is missing/empty
          # (Use AIRPORT IATA codes, not city codes like LON)
          ORIGIN_IATA: "LHR"
          DEST_IATA: "BCN"

          # How far ahead + trip duration
          DAYS_AHEAD: "60"
          TRIP_LENGTH_DAYS: "5"

          # Insert cap (keep low for free tier)
          DUFFEL_MAX_INSERTS: "3"

          # Optional affiliate
          SKYSCANNER_AFFILIATE_ID: ${{ secrets.SKYSCANNER_AFFILIATE_ID }}

          # === OpenAI (scoring/copy) ===
          OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}
          OPENAI_MODEL: ${{ secrets.OPENAI_MODEL }}

          # === Renderer ===
          RENDER_URL: ${{ secrets.RENDER_URL }}

          # === Instagram ===
          IG_ACCESS_TOKEN: ${{ secrets.IG_ACCESS_TOKEN }}
          IG_USER_ID: ${{ secrets.IG_USER_ID }}

          # === Telegram FREE ===
          TELEGRAM_BOT_TOKEN: ${{ secrets.TELEGRAM_BOT_TOKEN }}
          TELEGRAM_FREE_CHANNEL: ${{ secrets.TELEGRAM_CHANNEL }}
          STRIPE_LINK: ${{ secrets.STRIPE_LINK }}

          # === Telegram VIP ===
          TELEGRAM_BOT_TOKEN_VIP: ${{ secrets.TELEGRAM_BOT_TOKEN_VIP }}
          TELEGRAM_VIP_CHANNEL: ${{ secrets.TELEGRAM_CHANNEL_VIP }}

        run: |
          python workers/unified_pipeline_worker.py
