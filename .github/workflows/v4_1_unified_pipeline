name: v4_5_pipeline

on:
  schedule:
    - cron: "30 7 * * *"   # 07:30 UTC (AM run)
    - cron: "30 16 * * *"  # 16:30 UTC (PM run)
  workflow_dispatch:

concurrency:
  group: v4_5_pipeline
  cancel-in-progress: false

jobs:
  pipeline:
    runs-on: ubuntu-24.04
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set RUN_SLOT from schedule
        id: runslot
        shell: bash
        run: |
          if [[ "${{ github.event_name }}" == "schedule" ]]; then
            if [[ "${{ github.event.schedule }}" == "30 7 * * *" ]]; then
              echo "RUN_SLOT=AM" >> $GITHUB_ENV
            else
              echo "RUN_SLOT=PM" >> $GITHUB_ENV
            fi
          else
            # manual runs default to AM behaviour unless overridden
            echo "RUN_SLOT=AM" >> $GITHUB_ENV
          fi

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Run unified pipeline worker (V4.5)
        env:
          # Google Sheets
          SPREADSHEET_ID: ${{ secrets.SPREADSHEET_ID }}
          GCP_SA_JSON: ${{ secrets.GCP_SA_JSON_ONE_LINE || secrets.GCP_SA_JSON }}

          RAW_DEALS_TAB: ${{ secrets.RAW_DEALS_TAB }}

          # Render + Instagram
          RENDER_URL: ${{ secrets.RENDER_URL }}
          IG_ACCESS_TOKEN: ${{ secrets.IG_ACCESS_TOKEN }}
          IG_USER_ID: ${{ secrets.IG_USER_ID }}

          # Telegram
          TELEGRAM_BOT_TOKEN: ${{ secrets.TELEGRAM_BOT_TOKEN }}
          TELEGRAM_CHANNEL: ${{ secrets.TELEGRAM_CHANNEL }}
          TELEGRAM_BOT_TOKEN_VIP: ${{ secrets.TELEGRAM_BOT_TOKEN_VIP }}
          TELEGRAM_CHANNEL_VIP: ${{ secrets.TELEGRAM_CHANNEL_VIP }}

          # Duffel (optional)
          DUFFEL_API_KEY: ${{ secrets.DUFFEL_API_KEY }}

          # OpenAI (optional)
          OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}
          OPENAI_MODEL: ${{ secrets.OPENAI_MODEL }}

          # Tier gating
          RUN_SLOT: ${{ env.RUN_SLOT }}
          VIP_DELAY_HOURS: "24"

          # V4.5 config tabs + features
          CONFIG_SIGNALS_TAB: "CONFIG_SIGNALS"
          PERFORMANCE_SIGNALS_TAB: "PERFORMANCE_SIGNALS"
          PERFORMANCE_SUMMARY_TAB: "PERFORMANCE_SUMMARY"
          MAILERLITE_FEED_TAB: "MAILERLITE_FEED"
          ENABLE_PERF_AGG: "1"
          ENABLE_EMAIL_FEED: "1"
          PERF_HALF_LIFE_DAYS: "14"
          EMAIL_FEED_TOP_N: "12"

        run: |
          python workers/unified_pipeline_worker.py

      - name: Upload logs (on failure)
        if: failure()
        uses: actions/upload-artifact@v4
        with:
          name: pipeline-logs
          path: |
            *.log
          retention-days: 7
