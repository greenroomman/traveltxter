# .github/workflows/v4_pipeline.yml
name: V4 Pipeline

on:
  workflow_dispatch:
  schedule:
    # 07:30 UTC + 16:30 UTC every day (matches your spec)
    - cron: "30 7 * * *"
    - cron: "30 16 * * *"

concurrency:
  group: traveltxter-v4-pipeline
  cancel-in-progress: false

jobs:
  pipeline:
    runs-on: ubuntu-24.04
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          # Keep it simple + deterministic for Actions
          pip install gspread google-auth requests openai

      - name: Run unified pipeline (Duffel → Score → Render → IG → Telegram)
        env:
          # --- Google Sheets ---
          GCP_SA_JSON: ${{ secrets.GCP_SA_JSON }}
          SPREADSHEET_ID: ${{ secrets.SPREADSHEET_ID }}
          RAW_DEALS_TAB: ${{ secrets.RAW_DEALS_TAB }}

          # --- Duffel (THIS FIXES YOUR "Duffel: DISABLED" PROBLEM) ---
          DUFFEL_API_KEY: ${{ secrets.DUFFEL_API_KEY }}
          DUFFEL_MAX_INSERTS: "3"          # keep within free tier
          CONFIG_TAB: "CONFIG"             # V4.2 routes tab (optional but recommended)
          # Fallback single-route search if CONFIG tab missing/empty:
          ORIGIN_IATA: "LHR"
          DEST_IATA: "BCN"
          DAYS_AHEAD: "60"
          TRIP_LENGTH_DAYS: "5"

          # --- AI Scoring ---
          OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}
          OPENAI_MODEL: ${{ secrets.OPENAI_MODEL }}

          # --- Render ---
          RENDER_URL: ${{ secrets.RENDER_URL }}

          # --- Instagram ---
          IG_ACCESS_TOKEN: ${{ secrets.IG_ACCESS_TOKEN }}
          IG_USER_ID: ${{ secrets.IG_USER_ID }}

          # --- Telegram (FREE + paid tiers) ---
          TELEGRAM_BOT_TOKEN: ${{ secrets.TELEGRAM_BOT_TOKEN }}
          TELEGRAM_FREE_CHANNEL: "-1003505750272"
          TELEGRAM_MONTHLY_CHANNEL: "-1003517970522"
          TELEGRAM_ANNUAL_CHANNEL: "-1003517970522"
        run: |
          python workers/unified_pipeline_worker.py
