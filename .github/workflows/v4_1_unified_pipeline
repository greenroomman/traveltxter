name: v4_2_pipeline

on:
  schedule:
    - cron: "30 7 * * *"   # 07:30 UTC (AM run - VIP posting)
    - cron: "30 16 * * *"  # 16:30 UTC (PM run - FREE posting)
  workflow_dispatch:

concurrency:
  group: v4_2_pipeline
  cancel-in-progress: false

jobs:
  pipeline:
    runs-on: ubuntu-24.04

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install \
            "gspread==6.2.1" \
            "google-auth==2.41.1" \
            "requests==2.32.5"

      - name: Set RUN_SLOT (AM/PM based on UTC hour)
        run: |
          HOUR="$(date -u +%H)"
          if [ "$HOUR" = "07" ]; then
            echo "RUN_SLOT=AM" >> $GITHUB_ENV
          else
            echo "RUN_SLOT=PM" >> $GITHUB_ENV
          fi
          echo "UTC hour: $HOUR"
          echo "RUN_SLOT set to: $RUN_SLOT"

      - name: Run TravelTxter V4.2 Pipeline (A+B LOCK)
        env:
          # Google Sheets
          GCP_SA_JSON: ${{ secrets.GCP_SA_JSON }}
          SPREADSHEET_ID: ${{ secrets.SPREADSHEET_ID }}
          RAW_DEALS_TAB: ${{ secrets.RAW_DEALS_TAB }}

          # Rendering service (PythonAnywhere)
          RENDER_URL: ${{ secrets.RENDER_URL }}

          # Instagram
          IG_ACCESS_TOKEN: ${{ secrets.IG_ACCESS_TOKEN }}
          IG_USER_ID: ${{ secrets.IG_USER_ID }}

          # Telegram FREE (map from your existing secret TELEGRAM_CHANNEL)
          TELEGRAM_BOT_TOKEN: ${{ secrets.TELEGRAM_BOT_TOKEN }}
          TELEGRAM_FREE_CHANNEL: ${{ secrets.TELEGRAM_CHANNEL }}

          # Telegram VIP (map from your existing secret TELEGRAM_CHANNEL_VIP)
          TELEGRAM_BOT_TOKEN_VIP: ${{ secrets.TELEGRAM_BOT_TOKEN_VIP }}
          TELEGRAM_VIP_CHANNEL: ${{ secrets.TELEGRAM_CHANNEL_VIP }}

          # Tier gating
          RUN_SLOT: ${{ env.RUN_SLOT }}
          VIP_DELAY_HOURS: "24"

        run: |
          python workers/unified_pipeline_worker.py

      - name: Upload logs (on failure)
        if: failure()
        uses: actions/upload-artifact@v4
        with:
          name: pipeline-logs
          path: |
            *.log
          retention-days: 7
