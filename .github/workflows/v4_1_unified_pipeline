name: V4 UNIFIED PIPELINE

on:
  schedule:
    - cron: "30 7 * * *"   # 07:30 UTC
    - cron: "30 16 * * *"  # 16:30 UTC
  workflow_dispatch:

permissions:
  contents: read

concurrency:
  group: v4-unified-pipeline
  cancel-in-progress: false

jobs:
  pipeline:
    runs-on: ubuntu-latest
    timeout-minutes: 15

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          pip install gspread google-auth requests openai

      - name: Run unified pipeline (single source of truth)
        env:
          # Sheets
          GCP_SA_JSON: ${{ secrets.GCP_SA_JSON }}
          SPREADSHEET_ID: ${{ secrets.SPREADSHEET_ID }}
          RAW_DEALS_TAB: "RAW_DEALS"

          # Duffel (THIS is what makes flights appear)
          DUFFEL_API_KEY: ${{ secrets.DUFFEL_API_KEY }}
          DUFFEL_MAX_INSERTS: "20"

          # OpenAI
          OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}
          OPENAI_MODEL: "gpt-4o-mini"

          # Render
          RENDER_URL: ${{ secrets.RENDER_URL }}

          # Instagram
          IG_ACCESS_TOKEN: ${{ secrets.IG_ACCESS_TOKEN }}
          IG_USER_ID: ${{ secrets.IG_USER_ID }}

          # Telegram (Free + VIP)
          TELEGRAM_BOT_TOKEN: ${{ secrets.TELEGRAM_BOT_TOKEN }}
          TELEGRAM_FREE_CHANNEL: "-1003505750272"

          TELEGRAM_BOT_TOKEN_VIP: ${{ secrets.TELEGRAM_BOT_TOKEN_VIP }}
          TELEGRAM_VIP_CHANNEL: "-1003517970522"

          # Stripe CTA
          STRIPE_LINK: ${{ secrets.STRIPE_LINK }}

        run: |
          python unified_pipeline_worker.py
